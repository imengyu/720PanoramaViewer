<SOUI name="mainWindow" title="@string/title" bigIcon="ICON_LOGO:32" 
      smallIcon="ICON_LOGO:16" margin="5,5,5,5"  resizable="1" wndType="appMain"
      appWnd="1"
>
  <root skin="skin_window_bkgnd" cache="1"  width="800" height="600" >
    <caption pos="0,0,-0,36" show="1" font="adding:0">
      <icon pos="10,8" src="ICON_LOGO:16"/>
      <text pos="29,9">@string/title</text>
      <imgbtn name="btn_close" skin="skin_btn_close"  pos="-35,0" size="35,36" tip="@string/close" animate="1"/>
      <imgbtn name="btn_max" skin="skin_btn_max"  pos="-70,0" size="35,36" tip="@string/maximize" animate="1" />
      <imgbtn name="btn_restore" skin="skin_btn_restore"  pos="-70,0" size="35,36" tip="@string/restore" show="0" animate="1" />
      <imgbtn name="btn_min" skin="skin_btn_min" pos="-105,0" size="35,36" tip="@string/minimize" animate="1" />
      <imgbtn name="btn_menu" skin="skin_btn_menu" pos="-140,0" size="35,36" tip="@string/menu" animate="1" />
      <imgbtn name="btn_menu" skin="skin_btn_fullscreen" pos="-175,0" size="35,36" tip="@string/fullscreen" animate="1" />
    </caption>
    <window pos="2,[2,-2,-2">
      <window pos="|-150,-48,@400,@48">
        
        <imgbtn name="btn_scale_100" skin="skin_btn_min" pos="0,0" size="38,48" animate="0" />
        <imgbtn name="btn_scale_org" skin="skin_btn_min" pos="0,0" size="38,48" show="0" animate="0" />
        
        <imgbtn name="btn_zoom_out" skin="skin_btn_zoom_out" pos="38,0" size="38,48" animate="0" />
        <imgbtn name="btn_zoom_in" skin="skin_btn_zoom_in" pos="76,0" size="38,48" animate="0" />

        <imgbtn name="btn_left_img" skin="skin_btn_left" pos="120,0" size="38,48" animate="0" />
        <imgbtn name="btn_right_img" skin="skin_btn_right" pos="158,0" size="38,48" animate="0" />

        <imgbtn name="btn_open" skin="skin_btn_open" pos="202,0" size="38,48" animate="0" />
        <imgbtn name="btn_info" skin="skin_btn_info" pos="240,0" size="38,48" animate="0" />
        <imgbtn name="btn_delete" skin="skin_btn_delete" pos="278,0" size="38,48" animate="0" />
        <imgbtn name="btn_album" skin="skin_btn_btn_tools" pos="316,0" size="38,48" animate="0" />
     
      </window>
    </window>
  </root>
</SOUI>
